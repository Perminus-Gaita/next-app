generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // ‚ùå DO NOT include url here in Prisma 7
}

// Your models here
model Team {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
}

model TelegramNonce {
  id          String   @id @default(cuid())
  nonce       String   @unique
  telegramId  BigInt   // Telegram IDs can be large
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@map("telegram_nonce")
}