model Jackpot {
  id            String         @id @default(nanoid(8))
  humanId       Int            @unique             @map("human_id")
  type          JackpotType
  status        JackpotStatus  @default(OPEN)
  bettingStatus BettingStatus?                     @map("betting_status")
  openedAt      DateTime?                          @map("opened_at")
  finishedAt    DateTime?                          @map("finished_at")
  updatedAt     DateTime       @updatedAt          @map("updated_at")
  createdAt     DateTime       @default(now())     @map("created_at")

  events           Event[]
  prizes           Prize[]
  payoutBreakdowns PayoutBreakdown[]
  pickSets         PickSet[]
  picks            Pick[]
  comments         Comment[]

  @@map("jackpots")
}

enum JackpotType {
  MEGA
  WEEKLY
}

enum JackpotStatus {
  OPEN
  FINISHED
  CANCELED
}

enum BettingStatus {
  OPEN
  CLOSED
}
